{
  "manifest_version": 3,
  "name": "LearnByHover",
  "version": "1.0.0",
  "description": "Hold Shift + drag to ask about any code/UI element and get instant AI-powered explanations",
  "author": "CodeLearner Team",
  "homepage_url": "https://github.com/tpC529/codelearner",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "LearnByHover - AI Code Explanations"
  },
  "permissions": ["activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "all_frames": true,
    "run_at": "document_end"
  }],
  "browser_specific_settings": {
    "gecko": {
      "id": "learnbyhover@codelearner.ai",
      "strict_min_version": "109.0"
    }
  }
}