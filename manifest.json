{
  "manifest_version": 3,
  "name": "LearnByHover",
  "version": "1.0",
  "description": "Hold Shift + drag to ask about any code/UI",
  "permissions": ["activeTab", "tabs"],
  "host_permissions": ["<all_urls>", "http://127.0.0.1:8000/*", "http://localhost:8000/*"],
  "background": { "service_worker": "background.js" },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "all_frames": true
  }]
}